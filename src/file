import './App.scss';
import logo from "./assets/1sesia.png";
import roboty from "./assets/roboty_komputer.png";
import funkcje from "./assets/funkcje.png";
import { useState, useEffect } from "react";
import defaultavatar from './assets/profilowy.png';
import opinia1 from './assets/opinia1.png';
import opinia2 from './assets/opinia2.png';
import opinia3 from './assets/opinia3.png';
import tw√≥rca from './assets/tw√≥rca.png';
import { FaFacebook, FaInstagram, FaEnvelope, FaPhone } from "react-icons/fa";

const App = () => {
    const [opinie, setOpinie] = useState([]);
    const [newReview, setNewReview] = useState({
        name: "",
        text: "",
        photos: [],
    });

    // Funkcja zamieniajƒÖca plik na Base64
    const toBase64 = (file) =>
        new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = () => resolve(reader.result);
            reader.onerror = (error) => reject(error);
        });

    // Obs≈Çuga zdjƒôƒá w formie Base64
    const handlePhotoUpload = async (e) => {
        const files = Array.from(e.target.files);
        const base64Photos = await Promise.all(files.map(file => toBase64(file)));
        setNewReview({ ...newReview, photos: base64Photos });
    };

    // Dodanie nowej opinii i zapis do LocalStorage
    const handleSubmit = (e) => {
        e.preventDefault();
        const updatedOpinie = [...opinie, { ...newReview, avatar: defaultavatar }];
        setOpinie(updatedOpinie);
        localStorage.setItem("opinie", JSON.stringify(updatedOpinie));
        setNewReview({ name: "", text: "", photos: [] });
    };

    // Wczytywanie opinii z LocalStorage
    useEffect(() => {
        const savedOpinie = JSON.parse(localStorage.getItem("opinie"));
        if (savedOpinie) {
            setOpinie(savedOpinie);
        } else {
            // Je≈õli brak w LocalStorage -> za≈Çaduj startowe opinie
            setOpinie([
                {
                    name: "Pawe≈Ç",
                    avatar: defaultavatar,
                    text: "Chcia≈Çbym serdecznie poleciƒá tego programistƒô, kt√≥ry wykona≈Ç dla mnie stronƒô internetowƒÖ...",
                    photos: [opinia1],
                },
                {
                    name: "Ukasz",
                    avatar: defaultavatar,
                    text: "Serdecznie polecam Mi≈Çy i szybki kontakt, konkretne podej≈õcie...",
                    photos: [opinia2],
                },
                {
                    name: "K.W",
                    avatar: defaultavatar,
                    text: "Kontakt super :) pe≈Çen profesjonalizm i szybka realizacja...",
                    photos: [opinia3],
                }
            ]);
        }
    }, []);

    return (
        <div className="app">
            {/* Sekcja 1 */}
            <section className="wrapper">
                <div className="left-section">
                    <div className="logo">
                        <strong>Dawid</strong> Grochowski<br/> Web<strong>Developer</strong>
                    </div>
                    <h1>Dlaczego warto mi zaufaƒá przy projektowaniu strony wizyt√≥wki?</h1>
                </div>
                <div className="right-section">
                    <img src={logo} alt="PodglƒÖd aplikacji finansowej" />
                </div>
            </section>

            {/* Sekcja 2 */}
            <section className="section-two">
                <div className="text-box">
                    <h2></h2>
                    <p>
                        Projektowanie stron to dzi≈õ nie tylko techniczna umiejƒôtno≈õƒá ‚Äì to sztuka ≈ÇƒÖczenia estetyki,
                        funkcjonalno≈õci i strategii marki w jednym miejscu...
                    </p>
                </div>
                <div>
                    <img className="ai" src={roboty} alt="" />
                </div>
            </section>

            {/* Sekcja Funkcje */}
            <section className="section-three">
                <div className="funkcje">
                    <img className="ai" src={funkcje} alt="" />
                    <h1>FUNKCJE, I TUTAJ ZACZYNA SIƒò WSZYSTKO !</h1>
                </div>
                <div className="features-box">
                    <div className="features-list">
                        <div className="feature-item">
                            <i>üë§</i>
                            <div>
                                <h3>Przyjazny dla u≈ºytkownika</h3>
                                <p>Intuicyjna nawigacja i przemy≈õlana struktura...</p>
                            </div>
                        </div>
                        <div className="feature-item">
                            <i>‚öôÔ∏è</i>
                            <div>
                                <h3>P≈Çynna integracja</h3>
                                <p>Strona gotowa na Twoje potrzeby, integracje bez problemu...</p>
                            </div>
                        </div>
                        <div className="feature-item">
                            <i>üõ°Ô∏è</i>
                            <div>
                                <h3>Bezpieczne i niezawodne</h3>
                                <p>Nowoczesne technologie = Twoje bezpiecze≈Ñstwo...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            {/* Sekcja Opinie */}
            <section className="section-four">
                <h2>Opinie</h2>

                <div className="testimonials">
                    {opinie.map(({ name, avatar, text, photos }, index) => (
                        <div className="testimonial" key={index}>
                            <img src={avatar} alt={name} className="avatar" />
                            <strong>{name}</strong>
                            <p>{text}</p>
                            <div className="client-photos">
                                {photos.map((photo, idx) => (
                                    <a href={photo} target="_blank" rel="noopener noreferrer" key={idx}>
                                        <img
                                            src={photo}
                                            alt={`Zdjƒôcie klienta ${idx + 1}`}
                                            className="client-photo"
                                        />
                                    </a>
                                ))}
                            </div>
                        </div>
                    ))}
                </div>

                <div className="add-review">
                    <h3>Dodaj swojƒÖ opiniƒô</h3>
                    <form onSubmit={handleSubmit}>
                        <input
                            type="text"
                            placeholder="Twoje imiƒô"
                            value={newReview.name}
                            onChange={(e) => setNewReview({ ...newReview, name: e.target.value })}
                            required
                        />
                        <textarea
                            placeholder="Twoja opinia"
                            value={newReview.text}
                            onChange={(e) => setNewReview({ ...newReview, text: e.target.value })}
                            required
                        ></textarea>
                        <input
                            type="file"
                            accept="image/*"
                            multiple
                            onChange={handlePhotoUpload}
                        />
                        <button type="submit">Dodaj opiniƒô</button>
                    </form>
                </div>
            </section>

            {/* Sekcja Tw√≥rca */}
            <section className="section-five">
                <div style={{ maxWidth: "50%" }}>
                    <h2>ü§ù Poznaj tw√≥rcƒô</h2>
                    <p>
                        Nazywam siƒô Dawid Grochowski i tworzƒô strony internetowe, kt√≥re sƒÖ nowoczesne,
                        szybkie i dostosowane do Twoich potrzeb...
                    </p>
                </div>
                <div>
                    <img
                        src={tw√≥rca}
                        alt="Zesp√≥≈Ç przedstawiony na ekranie laptopa"
                        style={{ borderRadius: "20px", maxWidth: "300px" }}
                    />
                </div>
            </section>

            {/* Sekcja Kontakt */}
            <section className="section-six">
                <div className="social-contact">
                    <div className="social">
                        <strong>Social</strong><br />
                        <a href="https://www.facebook.com/" target="_blank" rel="noopener noreferrer" className="social-link">
                            <FaFacebook />
                        </a>
                        <a href="https://www.instagram.com/" target="_blank" rel="noopener noreferrer" className="social-link">
                            <FaInstagram />
                        </a>
                    </div>

                    <div className="contact">
                        <strong>Kontakt</strong><br />
                        <p>
                            <FaEnvelope className="contact-icon" />
                            <a href="mailto:dgrochowsk@gmail.com" className="contact-link">dgrochowsk@gmail.com</a>
                        </p>
                        <p>
                            <FaPhone className="contact-icon" />
                            <a href="tel:+48516459508" className="contact-link">+48 516 459 508</a>
                        </p>
                    </div>
                </div>
            </section>
        </div>
    );
};

export default App;
